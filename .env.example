# LLM Provider Selection (openai | ollama)
LLM_PROVIDER=ollama
LLM_TIMEOUT=120

# OpenAI Configuration (Used if LLM_PROVIDER=openai)
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4o
OPENAI_API_BASE=https://api.openai.com/v1

# Ollama Configuration (Used if LLM_PROVIDER=ollama)
# 注意：如果地址以 /v1 结尾，系统将自动使用 OpenAI 兼容协议连接
OLLAMA_BASE_URL=http://localhost:11434/v1
OLLAMA_MODEL=qwen2.5:7b

# 本地 LLM/Embeddings 服务（OpenAI兼容 /v1/embeddings）
EMBEDDINGS_ENDPOINT=http://localhost:11434/v1/embeddings
EMBEDDINGS_MODEL=nomic-embed-text
EMBEDDINGS_API_KEY=
EMBEDDINGS_ENCODING_FORMAT=float

RERANKER_ENDPOINT=https://dashscope.aliyuncs.com/compatible-api/v1/reranks
RERANKER_MODEL=qwen3-rerank
RERANKER_API_KEY=sk-your-openai-key-here

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=sl_agent

# LangChain Tracing
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=your-langchain-api-key
LANGCHAIN_PROJECT=SeerLord-Dev

# Redis Configuration
REDIS_URL=redis://:password@localhost:6379/0

# Redis Sentinel Configuration (Optional)
REDIS_USE_SENTINEL=false
REDIS_SENTINELS=
REDIS_SENTINEL_SERVICE_NAME=
REDIS_SENTINEL_USERNAME=
REDIS_SENTINEL_PASSWORD=
REDIS_SENTINEL_SOCKET_TIMEOUT=0.1

# Redis Cluster Configuration (Optional)
REDIS_USE_CLUSTERS=false
REDIS_CLUSTERS=
REDIS_CLUSTERS_PASSWORD=

# 向量维度/类型（需与实际 embedding 输出一致）
SIM_METRIC=cosine
EMBEDDING_DIM=1024

# ========== Qdrant 向量存储（可远程/本机持久化）==========
# 远程/已有服务器：只需设置 QDRANT_URL、QDRANT_COLLECTION（和可选 QDRANT_API_KEY）
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=agent_memory

NEO4J_URL=neo4j://127.0.0.1:7687
NEO4J_PORT=7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=neo4j

ALLOW_DEFAULT_TENANT_FALLBACK=True